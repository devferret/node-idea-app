nav.navbar.is-primary(style="position: fixed !important; top: 0; left: 0; right: 0; z-index: 1; box-shadow: 0 2px 20px -2px gray;")
	.container
		.navbar-brand
			a.navbar-item(href="/")
				img(src="/img/bulb_idea.png" style="height: 120%;")
				h1.title.has-text-white IdeaPOP
			.navbar-burger.burger(data-target="navbarMenu" onclick="document.querySelector('.navbar-menu').classList.toggle('is-active');")
				span
				span
				span
		#navbarMenu.navbar-menu
			.navbar-start
				a.navbar-item(href="/")
					| Home 
				a.navbar-item(href="/about") 
					| About
			hr
			.navbar-end
				if !user
					.navbar-item
						.field.is-grouped
							p.control
								a.button.is-primary(href="/users/login")
									span.icon
										i.fa.fa-sign-in
									span Sign In 
							p.control
								a.button.is-primary(href="/users/register") 
									span.icon
										i.fa.fa-user-o
									span Register
				else
					.navbar-item
						.field.is-grouped
							p.control
								a.button.is-primary.is-inverted(href="/ideas")
									span.icon
										i.fa.fa-lightbulb-o
									span All your ideas
							p.control
								a.button.is-primary.is-inverted(href="/ideas/add")
									span.icon
										i.fa.fa-plus 
									span Add new idea
					hr
					.navbar-item.has-dropdown.is-hoverable
						.navbar-link(style="cursor: pointer;")
							span.icon
								i.fa.fa-user
							span= user.name
							.navbar-dropdown.is-boxed
								a.navbar-item(href="/users/logout") 
									| Logout
						
