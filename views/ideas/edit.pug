extends ../layouts/layout.pug

block title
	title Edit idea
block body
	if idea
		.subtitle.is-3.has-text-centered.animated.fadeInDown Edit your Idea
		form(action=`/ideas/${idea.id}?_method=PUT` method="POST")
			input(type="hidden" name="_method" value="PUT")
			.field.is-horizontal
				.field-label.is-normal
					label.label Title
				.field-body
					.field
						.form-control
							input.input(type="text" placeholder="Title" name="title" value=`${idea.title}` required)
			.field.is-horizontal
				.field-label.is-normal
					label.label Details
				.field-body
					.field
						.form-control
							textarea.textarea(placeholder="Details" name="details" required)= idea.details
			.field.is-horizontal
				.field-label
				.field-body
					.field
						.form-control
							button.button.is-link.is-medium.animated.fadeInLeft(type="submit")
								span.icon
									i.fa.fa-wrench
								span Edit Idea